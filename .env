# Logging configuration
LOG_LEVEL=DEBUG
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_DIR=logs
LOG_FILE=engine.log

# Log rotation settings
LOG_FILE_MAX_SIZE_BYTES=1048576  # 1MB in bytes
LOG_FILE_BACKUP_COUNT=3


# PostgreSQL
POSTGRES_DB=engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example
POSTGRES_HOST=db
POSTGRES_PORT=5432

# URL completo para SQLAlchemy / databases
POSTGRES_URL=postgresql://postgres:example@db:5432/engine

# RabbitMQ
RABBIT_URL=amqp://guest:guest@rabbitmq:5672/


# … suas variáveis atuais
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
